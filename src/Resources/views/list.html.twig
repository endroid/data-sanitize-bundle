{% extends '@EndroidDataSanitize/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ preload(asset('/build/app.css', 'endroid_data_sanitize')) }}">
{% endblock %}

{% block menu %}
{#    {{ render(controller('Endroid\\DataSanitizeBundle\\Controller\\MenuController')) }}#}
{% endblock %}

{% block content %}
    <h1>Merge {{ name }} entities</h1>
    {% if name %}
        <div id="app">
            <merger
                    state-url="{{ path('data_sanitize_state', { name: name }) }}"
                    merge-url="{{ path('data_sanitize_merge', { name: name }) }}"
            ></merger>
        </div>
    {% else %}
        Choose the entity you want to merge from the menu.
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ preload(asset('/build/app.js', 'endroid_data_sanitize')) }}"></script>
{% endblock %}
